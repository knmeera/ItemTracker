
@{

    ViewBag.Title = "RazorForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ClassDemo.Models.TrackerItem

<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <p>
            <h2>Tracker Item</h2>
            @*@Html.ValidationSummary()*@
            @ViewBag.Message
        </p>

    </div>
</div>

@using (Html.BeginForm("RazorForm", "Home", FormMethod.Post, new { id = "myForm", enctype = "multipart/form-data" }))
{
    <div class="container">

        <div class="row">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-2">
                    <p>
                        <label for="ID" >
                            Item ID:
                        </label><br>
                        @Html.TextBox("ItemId", null, new { @class = "form-control", tabindex = 1, Value = "101" })
                        @Html.ValidationMessageFor(model => model.ItemId)
                        
                    </p>
                    <p>
                        <label for="Category">
                            Item Category:
                        </label><br>
                        @Html.DropDownList("ItemCategory", (IEnumerable<SelectListItem>)ViewBag.CategoryVB, new { @class = "form-control", tabindex = 3 })
                        @*@Html.DropDownList("ItemCategory", (IEnumerable<SelectListItem>)ViewBag.CategoryVB, "--Select Item Category--", new { @class = "form-control", tabindex = 3})*@
                    </p>
                    <p>
                        <label for="Priority">
                            Priority:
                        </label><br>
                        @Html.DropDownList("ItemPriority", (IEnumerable<SelectListItem>)ViewBag.ItemPriorityVB, new { @class = "form-control", tabindex = 5 })
                        @*@Html.DropDownList("ItemPriority", (IEnumerable<SelectListItem>)ViewBag.ItemPriorityVB, "--Select Type--", new { @class = "form-control", tabindex = 5})*@
                        @Html.ValidationMessageFor(model => model.ItemPriority)
                    </p>
                </div>
                <div class="col-sm-4">
                    <p>
                        <label for="Type">
                            Project Name:
                        </label><br>
                        @Html.TextBox("ProjectName", null, null, new { @class = "form-control", tabindex = 2, Value = "Item Tracker" })
                    </p>
                    <p>
                        <label for="Type">
                            Item Type:
                        </label><br>
                        @Html.DropDownList("ItemType", (IEnumerable<SelectListItem>)ViewBag.ItemTypeVB, new { @class = "form-control", tabindex = 4 })
                        @*@Html.DropDownList("ItemType", (IEnumerable<SelectListItem>)ViewBag.ItemTypeVB, "--Select Type--", new { @class = "form-control", tabindex = 4 })*@
                    </p>
                    <p>
                        <label for="ID">
                            Status:
                        </label><br>
                        @Html.DropDownList("ItemStatus", (IEnumerable<SelectListItem>)ViewBag.ItemStatusVB, new { @class = "form-control", tabindex = 6})
                        @*@Html.DropDownList("ItemStatus", (IEnumerable<SelectListItem>)ViewBag.ItemStatusVB, "--Select Type--", new { @class = "form-control", tabindex = 6})*@
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 col-md-offset-2">
                    <p>
                        <label for="Summary">
                            Summary:
                        </label><br>
                        @Html.TextArea("ItemSummary","Project Summary", new { @class = "form-control", style = "width: 75%; max-width: 72%;", tabindex = 7, Value = "Project Summary" })
                        @Html.ValidationMessageFor(model => model.ItemSummary)
                    </p>
                </div>
                <div class="col-md-2 "></div>
            </div>
            <div class="row">
                <div class="table-responsive">
                    <div class="col-md-2 col-md-offset-2"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 col-md-offset-2">
                    <p>
                        <label for="ID">
                            Created By:
                        </label><br>

                        @Html.TextBox("CreatedBy", null, new { @class = "form-control", tabindex = 8, Value = "Project Manager" })
                        @Html.ValidationMessageFor(model => model.CreatedBy)
                    </p>

                </div>
                <div class="col-sm-2 ">
                    <p>
                        <label for="ID">
                            Created Date:
                        </label><br>
                        @Html.TextBox("ItemCreatedDate", null, new { @Value = DateTime.Now.ToLocalTime(), @class = "form-control", @readonly = "null" })
                        @Html.ValidationMessageFor(model => model.ItemCreatedDate)
                    </p>

                </div>
                <div class="col-sm-2 ">
                    <p>
                        <label for="Type">
                            Parent:
                        </label><br>
                        @Html.TextBox("Parent", null, null, new { @class = "form-control", Value = "0", tabindex = 9})
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 col-md-offset-2">
                    <p>
                        <label for="Type">
                            Assigned To:
                        </label><br>
                        @Html.TextBox("AssignedTo", null, null, new { @class = "form-control", tabindex = 10, Value = "Developer" })
                    </p>

                </div>
                <div class="col-sm-2 ">
                    <p>
                        <label for="ID">
                            Assigned Date:
                        </label><br>
                        @Html.TextBox("AssignedDate", null, new { @class = "form-control", tabindex = 11, Value = "09-15-2017" })
                        @*@Html.ValidationMessageFor(model => model.AssignedDate)*@
                    </p>

                </div>
                <div class="col-sm-2 ">
                    <p>
                        <label for="ID">
                            End Date:
                        </label><br>
                        @Html.TextBox("ItemEndDate", null, new { @class = "form-control", tabindex = 12, Value = "09-16-2017" })
                        @Html.ValidationMessageFor(model => model.ItemEndDate)
                    </p>

                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 col-md-offset-2">
                    <p>
                        <label for="ID">
                            Owner:
                        </label><br>
                        @Html.TextBox("Owner", null, new { @class = "form-control", tabindex = 13, Value = "NA" })
                        @*@Html.ValidationMessageFor(model => model.Owner)*@
                    </p>

                </div>
                <div class="col-sm-2 ">
                    <p>
                        <label for="ID">
                            % WorkCompleted:
                        </label><br>
                        @Html.TextBox("workCompleted", null, new { @class = "form-control", Value = "0", tabindex = 14 })

                    </p>

                </div>
                <div class="col-sm-2 ">
                    <p>
                        <label for="ID">
                            Resolved Date:
                        </label><br>
                        @Html.TextBox("ResolvedDate", null, new { @class = "form-control", tabindex = 15 , Value = "09-16-2017" })
                        @Html.ValidationMessageFor(model => model.ResolvedDate)
                    </p>



                </div>
                <div class="row">
                    <div class="col-md-10 col-md-offset-2">
                        <p>
                            <label for="ID">
                                Impact:
                            </label><br>
                            @Html.TextArea("Impact","NA", new { @class = "form-control", style = "width: 75%; max-width: 72%;", tabindex = 16, Value = "NA" })
                            @*@Html.ValidationMessageFor(model => model.Impact)*@
                        </p>
                    </div>
                    <div class="col-md-2 "></div>
                </div>
                <div class="row">
                    <div class="col-md-10 col-md-offset-2">
                        <p>
                            <label for="ID">
                                Resolution:
                            </label><br>
                            @Html.TextArea("Resolution","NA", new { @class = "form-control", style = "width: 75%; max-width: 72%;",tabindex = 17, Value = "NA" })
                            @*@Html.ValidationMessageFor(model => model.Resolution)*@
                        </p>
                    </div>
                    <div class="col-md-2 "></div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-md-offset-2">
        </div>
        <div class="col-md-4 col-md-offset-4">
            <p>
                Select a file <input type="file" name="file" class="btn btn-default" tabindex=18 />&nbsp<input type="submit" value="Attachment" class="btn btn-default" />
            </p>
        </div>

    </div>

    <div class="row">
            <div class="col-md-4">
                <p>

                </p>
            </div>
            <div class="col-md-4">
                <p>
                    <input type="submit" value="Add" class="btn btn-primary btn-lg" tabindex=19 />&nbsp<input type="button" onclick="myFunction()" value="Reset form" class="btn btn-primary btn-lg" tabindex=20 />
                </p>
                <div class="col-md-4">
                    <p>

                    </p>
                </div>
            </div>

        </div>

}



