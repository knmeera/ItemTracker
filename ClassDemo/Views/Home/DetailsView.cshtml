                    </tr>
                    <tr>
                        <td>Item type:</td>
                        <td>@Html.DisplayTextFor(m => m.ItemType)</td>
                    </tr>
                    <tr>
                        <td>Item Summary:</td>
                        <td>@Html.DisplayTextFor(m => m.ItemSummary)</td>
                    </tr>
                    <tr>
                        <td>Item Status:</td>
                        <td>@Html.DisplayTextFor(m => m.ItemCategory)</td>
                    </tr>
                    <tr>
                        <td>Item Type:</td>
                        <td>@Html.DisplayTextFor(m => m.ItemType)</td>
                    </tr>
                    <tr>
                        <td>Created By:</td>
